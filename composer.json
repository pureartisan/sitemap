{
    "name": "pureartisan/sitemap",
    "description": "Simple sitemap addon for Statamic v3",
    "type": "statamic-addon",
    "license": "MIT",
    "require": {
        "php": "^5.3.2 || ^7.0 || ^8.0",
        "statamic/cms": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pecotamic\\Sitemap\\": "src"
        }
    },
    "authors": [{
        "name": "Werner Freytag",
        "email": "wf@pecora.de"
    }],
    "extra": {
        "statamic": {
            "name": "Pecotamic Sitemap",
            "description": "Sitemap addon"
        },
        "laravel": {
            "providers": [
                "Pecotamic\\Sitemap\\ServiceProvider"
            ]
        }
    }
}
